<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/teacher-login.css">
</head>
<body>

    <%- include('../includes/nav.ejs') %>
    <div class="container-fluid">
        <div class="row signup-form">
            <div class="col-xl-7 col-lg-7 col-md-7 signup-text">
                <div class="signup-text-div">
                    <h1>Making submissions easy! </h1>
                    <h1>Login</h1>
                    <h1>To get Started</h1>
                    <p>Not a member teacher? <a href="/teacher/signup">Sign Up</a> </p>
                </div>
            </div>
            <div class="col-xl-3 col-lg-4 col-md-4">

                <% if(errorMessage) { %>
                    <div class="err-msg"><%= errorMessage %></div>
                  <% } %>
                
                <form class="form-container" action="/teacher/login" method="POST">
                    <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
                    <lottie-player src="https://assets3.lottiefiles.com/packages/lf20_h9rxcjpi.json"  background="transparent"  class="icon" speed="1"  style="width: 300px; height: 300px;"  loop  autoplay></lottie-player>
                    <div class="form-group">
                      <input type="email" class="form-control" id="email" placeholder="Enter email" name="email" required>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="pswd" required>
                      </div>
                    <button type="submit" class="register-btn">Login</button>
                  </form>
            </div>
        </div>
    </div>